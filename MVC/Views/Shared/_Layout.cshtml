<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MVC.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-5">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/img/Favicom.png" alt="Logo" class="navbar-logo" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (Context.Session.GetString("Rol") == null)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                        
                        }

                        @if (Context.Session.GetString("Rol") == "Gerente")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="VerPerfil" asp-action="Perfiles">Ver Perfil</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Pagos" asp-action="VerPagos">Listar</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="AgregarPago" asp-action="NuevoPago">Tipo De Gasto</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="EliminarTipoGasto" asp-action="EliminarGasto">Eliminar Tipo Gasto</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="VerGastosPersonales" asp-action="VerGastosPropios">Ver Gastos Personales</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="CargarNuevoPago" asp-action="CargarUnPago">Cargar nuevo Pago</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-danger" asp-controller="Login" asp-action="Logout">
                                    <i class="bi bi-box-arrow-left"></i> Cerrar sesión
                                </a>
                            </li>
                        }

                        @if (Context.Session.GetString("Rol") == "Empleado")
                        {
                           
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="VerPerfil" asp-action="Perfiles">Ver Perfil</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="CargarNuevoPago" asp-action="CargarUnPago">Cargar nuevo Pago</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="VerGastosPersonales" asp-action="VerGastosPropios">Ver Gastos Personales</a>
                            </li>
                            <li class="nav-item">
                           <div> <a class="btn btn-danger" asp-controller="Login" asp-action="Logout">
                                <i class="bi bi-box-arrow-left"></i> Cerrar sesión
                                    </a>
                                </div>
                                <div class="modal-body">
                                    ¿Estás seguro de que deseas cerrar sesión?
                                </div>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted py-3">
        <div class="container d-flex flex-wrap justify-content-between align-items-center">
            <div class="d-flex align-items-center">
                <img src="~/img/Juan.png" alt="Juan López" class="footer-img me-2" />
                <img src="~/img/Matías.png" alt="Matías Álvarez" class="footer-img me-2" />
                <span>Obligatorio Programación 2: Juan López - Matías Álvarez</span>
            </div>
            <a asp-area="" asp-controller="Home" asp-action="Index">
                <img src="~/img/Favicom.png" alt="Logo" class="navbar-logo" />
            </a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>