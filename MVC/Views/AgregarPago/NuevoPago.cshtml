@{
    ViewData["Title"] = "Agregar Pago";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h1 class="text-center mb-4">Nuevo Pago</h1>

                    <form asp-action="NuevoPago" method="post">
                        <div class="mb-3">
                            <label for="NuevoTipoPago" class="form-label">Tipo de Pago</label>
                            <input type="text"
                                   id="NuevoTipoPago"
                                   name="NuevoTipoPago"
                                   placeholder="Ej: Luz, Agua, Internet"
                                   class="form-control"
                                   required />
                        </div>

                        <div class="mb-3">
                            <label for="Descripcion" class="form-label">Descripción</label>
                            <textarea id="Descripcion"
                                      name="Descripcion"
                                      placeholder="Ingrese una breve descripción del pago"
                                      class="form-control"
                                      rows="3"
                                      required></textarea>
                        </div>

                        <div class="mb-3">
                            <label for="Monto" class="form-label">Monto</label>
                            <input type="number"
                                   id="Monto"
                                   name="Monto"
                                   placeholder="Ingrese el monto en pesos"
                                   class="form-control"
                                   min="1"
                                   step="0.01"
                                   required />
                        </div>

                        <div class="mb-3">
                            <label for="FechaPago" class="form-label">Fecha de Pago</label>
                            <input type="date"
                                   id="FechaPago"
                                   name="FechaPago"
                                   class="form-control"
                                   required />
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">
                                Agregar Pago
                            </button>
                        </div>
                    </form>

                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger mt-3">
                            @ViewBag.Error
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>